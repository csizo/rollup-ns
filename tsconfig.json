{
  "compilerOptions": {

    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "typeRoots": [ "./node_modules/@types" ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "/node_modules",
    "tests/**/*.spec.tss",
    "bin",
    "dist"
  ]
}